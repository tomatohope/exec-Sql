prepare:

1、cp -r connectMysql /usr/lib/python2.7/site-packages/
2、yum -y install python-devel mysql-devel  &&  pip install MySQL-python


example:

# -*- coding: UTF-8 -*-
from connectMysql import execsql

results=execsql.execsql('192.168.43.225', 'root', '123456', 'azkaban', 'SELECT * from projects', '1')
print("results: ",results)